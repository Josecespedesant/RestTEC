<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestTEC_Movil_App.MainPage"
             BackgroundColor="AliceBlue"
             >

    <StackLayout VerticalOptions="EndAndExpand" Padding="100">
        <Label StyleId="restecLabel" Text="RestTEC" TextColor="DarkSlateBlue" FontSize="Header" HorizontalOptions="Center"/>
        <Entry x:Name="email" Text="{Binding Path=Email}" Placeholder="Correo Electrónico" BackgroundColor="#00BFFF" TextColor="Black" />
        <Entry x:Name="password" Text="{Binding Path=Password}" Placeholder="Contraseña" IsPassword="True" BackgroundColor="#00BFFF" TextColor="Black"/>
        <Button x:Name="loginButton" Text="Iniciar Sesión" BackgroundColor="#0072bc" TextColor="White" />
        <Label x:Name="registrarseLabel" Text="Registrarse" TextColor="Black" HorizontalOptions="Center"/>
    </StackLayout>

</ContentPage>

